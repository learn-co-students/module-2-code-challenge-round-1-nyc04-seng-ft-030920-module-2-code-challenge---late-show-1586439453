<h1>Create a new appearance</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p> <%= error %> </p>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :number %>
    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit "Submit"%>
<% end %>
<br />
<%= link_to "Return to list of episodes", episodes_path %>
<br />
<%= link_to "Return to list of guests", guests_path %>

